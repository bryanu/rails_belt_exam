<nav>
  <div class="nav-wrapper">
    <a href="#" class="brand-logo">&nbsp; Login & Registration</a>
  </div>
</nav>

<div class="row wrapperlogin">

  <form class="col s6" action="/sessions/login" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">

      <div class="row">
        <div class="col s10 underline">
          <h1>Log-In</h1>
        </div>
      </div>

      <div class="row">
        <div class="col s10">
          <% if flash[:email_error] %><p><%= flash[:email_error] %></p></br><% end %>
          <label for="email">Email:</label>
          <input type="text" name="user[email]">
        </div>
      </div>

      <div class="row">
        <div class=" col s10">
          <% if flash[:password_error] %><p><%= flash[:password_error] %></p></br><% end %>
          <label for="password">Password:</label>
          <input type="password" name="user[password]">
        </div>
      </div>

      <div>
        <div>
          <input class="btn" type="submit" name="submit" value="Login">
        </div>
      </div>

  </form>

  <form class="col s6" action="/users/create" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

      <div class="row">
        <div class="col s12 underline">
          <h1>Register</h1>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="first_name">First Name:</label>
          <% if flash[:first_name] %><p class="err"><%=flash[:first_name]%></p><% end %>
          <input class="form-control" type="text" name="user[first_name]"
          value="<% if defined? @user_first_name %><%=@user_first_name%><%end%>">
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="last_name">Last Name:</label>
          <% if flash[:last_name] %><p class="err"><%=flash[:last_name]%></p><% end %>
          <input class="form-control" type="text" name="user[last_name]"
          value="<% if defined? @user_last_name %><%=@user_last_name%><%end%>">
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="email">Email:</label>
          <% if flash[:email] %><p class="err"><%=flash[:password]%></p><% end %>
          <input class="form-control" type="text" name="user[email]"
          value="<% if defined? @user_email %><%=@user_email%><%end%>">
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="password">Password:</label>
          <% if flash[:password] %><p class="err"><%=flash[:password]%></p><% end %>
          <input class="form-control" type="password" name="user[password]"
          value="<% if defined? @user_password %><%=@user_password%><%end%>">
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="password_confirmation">Password Confirmation:</label>
          <% if flash[:password_confirmation] %><p class="err"><%=flash[:password_confirmation]%></p><% end %>
          <input type="password" name="user[password_confirmation]" value="">
        </div>
      </div>

      <div>
        <input class="btn" type="submit" name="submit" value="Register">
      </div>

  </form>

</div>
