  <div class="nav-wrapper">
    <a href="#" class="brand-logo">&nbsp; Playlist</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li>Welcome, <%= @currUser.first_name %> <%= @currUser.last_name %>!</li>
