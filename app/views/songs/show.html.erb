<div class="wrappersongsshow">
  <h4>Others who have added:</h4>
  <span><h1><%= @song.title %></h1><h5>by</h5><h1><%= @song.artist %></h1></span>
  <div class="tablewrapper">
    <table class="highlight bordered">
      <thead>
        <th>Name</th>
        <th>Times Added</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <a href="/lists/<%= user.user.id %>/show">
                <%= user.user.first_name %> <%= user.user.last_name %>
              </a>
            </td>
            <td><%= user.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
